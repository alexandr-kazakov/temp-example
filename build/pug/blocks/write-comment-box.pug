+e.FORM(action="#")
  +b.write-comment-box(class= writeCommentBoxClasses? writeCommentBoxClasses : false)
    if userState === "login"
      +e.header
        +e.IMG.image(src= "img/content/user-1.jpg", alt= "Пользователь")

        if writeCommentBoxType !== "_no-stars_flex-row"
          +b.SELECT.stars-rating-select(id="stars-rating-select" name="rating")
            +e.OPTION(value="1") 1
            +e.OPTION(value="2") 2
            +e.OPTION(value="3" selected="selected") 3
            +e.OPTION(value="4") 4
            +e.OPTION(value="5") 5

