  // begin Cart-box
  +b.cart-box&attributes(attributes)
    +e.dropdown-toggle(data-dropdown-toggle-hover= box.parent === "header" ? "true" : false, data-toggle="modal" data-target="#cart-modal")
      +e.left
        +e.SPAN.title Ваша корзина
        if box.value
          +e.SPAN.value
            +e.SPAN.value-number= box.value 
            +e.SPAN.currency &#8381;
        else
          +e.SPAN.value
      +e.right 
        | !{iconBasket}
        +e.SPAN.quantity 
          +e.SPAN.quantity-number= box.quantity
    +e.dropdown.dropdown.hidden
      if box.empty
        +e.dropdown-content-empty
          |  !{iconDishesEmpty}
          +e.SPAN.dropdown-content-empty-text Вы пока ничего не заказали

      else
        +e.FORM
          +e.dropdown-content
            +cart-item-box({title: "Стейк фри", quantity: "1", price: "480"})._parent_cart-box-dropdown 
            +cart-item-box({title: "Двойной чизбургер с беконом", quantity: "1", price: "1 920", adds: "true"}, {addTitle: "Зелень", addPrice: "480"}, {addTitle: "Халапеньо", addPrice: "3 100"} , {addTitle: "Бальзамический уксус", addPrice: "8"})._parent_cart-box-dropdown 
            +cart-item-box({title: "Рёбрышки чёрного быка в соусе BBQ с салатом коул-слоу", quantity: "2", price: "12 150", adds: "true"}, {addTitle: "Экстра рыбная котлета", addPrice: "1 300"})._parent_cart-box-dropdown 

          +e.dropdown-nav
            +e.dropdown-nav-discount
              +e.SPAN.dropdown-nav-discount-title Скидка составила 10% 
              +e.SPAN.dropdown-nav-discount-value 66руб

            +e.dropdown-nav-medium
              +e.SPAN.dropdown-nav-title Итого:
              +e.SPAN.dropdown-nav-value
                +e.SPAN.dropdown-nav-value-fake 660 руб
                | 13 570
                +e.SPAN.dropdown-nav-currency руб

            +e.dropdown-nav-bottom
              +btn("btn", "submit", "Оформить заказ")._theme_base._full-width


  // end Cart-box