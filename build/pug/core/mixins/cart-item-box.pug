mixin cart-item-box(main, ...adds)
  - var iconTrash= '<svg class="cart-item-box__trash-btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 11.7 15"><path d="M.8 13.3A1.7 1.7 0 0 0 2.5 15h6.7a1.7 1.7 0 0 0 1.6-1.7v-10H.8zM11.7.8h-3L8 0H3.7L3 .8H0v1.7h11.7z" data-name="Path 168"/></svg>'
  - var iconRemove= '<svg class="cart-item-box__adds-remove-btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 21 20"><g transform="translate(-813 -587)"><ellipse cx="10.5" cy="10" data-name="Ellipse 20" rx="10.5" ry="10" transform="translate(813 587)"/><g transform="translate(819 593)"><path d="M10.5 1.5H.7A.7.7 0 0 1 0 .7.7.7 0 0 1 .7 0h9.8a.7.7 0 0 1 .7.8.7.7 0 0 1-.7.7z" data-name="Path 75" transform="rotate(-45 9.6 4)"/><path d="M10.5 1.5H.7A.7.7 0 0 1 0 .8.7.7 0 0 1 .7 0l9.8-.1a.7.7 0 0 1 .7.7.7.7 0 0 1-.7.8z" data-name="Path 77" transform="rotate(45 .5 1.3)"/></g></g></svg>'


  // begin Cart-item-box
  +b.cart-item-box&attributes(attributes)
    +e.top
      +e.H5.title= main.title
      +e.BUTTON.trash-btn(type="button")
        | !{iconTrash}

    if main.adds === "true"
      +e.adds
        +e.SPAN.adds-title Добавки
        +e.UL.adds-items
          each item in adds
            +e.LI.adds-item
              +e.SPAN.adds-name= item.addTitle
              +e.adds-price
                +e.SPAN.adds-price-value= "+ " + item.addPrice + "руб"
                +e.BUTTON.adds-remove-btn(type="button")
                  | !{iconRemove}


    +e.bottom
      +input-number-box({type: "text", name: "quantity" , value: main.quantity})
      +e.SPAN.price
        | !{main.price}
        +e.SPAN.currency руб
  // end Cart-item-box