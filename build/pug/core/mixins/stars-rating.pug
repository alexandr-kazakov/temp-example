mixin stars-rating(box)
  // begin Stars-rating
  +b.stars-rating&attributes(attributes)
    | !{ratingStarActive}
    if box.stars > 1
      | !{ratingStarActive}
    else
      | !{ratingStar}
    if box.stars > 2
      | !{ratingStarActive}
    else
      | !{ratingStar}
    if box.stars > 3
      | !{ratingStarActive}
    else
      | !{ratingStar}
    if box.stars > 4
      | !{ratingStarActive}
    else
      | !{ratingStar}

  // end Stars-rating
